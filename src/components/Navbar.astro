<style>
  .dropdown {
    position: relative;
  }
  .dropdown-toggle:after {
    content: " ▼";
    font-size: 0.7em;
  }
  .dropdown-menu {
    display: none;
    position: absolute;
    left: 0;
    top: 100%;
    background: white;
    min-width: 160px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-radius: 6px;
    z-index: 10;
    padding: 0.5rem 0;
  }
  .dropdown:hover .dropdown-menu,
  .dropdown:focus-within .dropdown-menu {
    display: block;
  }
  .dropdown-menu li {
    list-style: none;
  }
  .dropdown-menu a {
    display: block;
    padding: 0.5rem 1.5rem;
    color: #1A1A1A;
    text-decoration: none;
    white-space: nowrap;
  }
  .dropdown-menu a:hover {
    background: #f0f4fa;
    color: #0066CC;
  }
  @media (max-width: 768px) {
    .dropdown-menu {
      position: static;
      min-width: 100%;
      box-shadow: none;
      border-radius: 0;
    }
  }
</style>